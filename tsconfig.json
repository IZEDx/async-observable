{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "sourceMap": true,
        "pretty": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "strict": true,
        "noUnusedLocals": true,
        "suppressImplicitAnyIndexErrors": true,
        "declaration": true,
        "declarationDir": "types",
        "lib": [
            "dom",
            "esnext"
        ],
        "outDir": "dist/esnext"
    },
    "exclude": [
        "node_modules",
        "tests",
        "types"
    ]
  }